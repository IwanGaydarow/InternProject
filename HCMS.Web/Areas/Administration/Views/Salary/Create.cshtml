@using HCMS.Data.Models.Enums;
@model HCMS.Web.ViewModels.Administration.Salary.CreateSalaryViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-3 col-lg-10 mx-auto">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Employee Salary</h1>
                            @if (Model.availableSalary)
                            {
                                <h6 class="text-danger">This is a current salary. Edit needed fields to change it.</h6>
                            }
                        </div>
                        <form method="post" asp-area="Administration" asp-controller="Salary" asp-action="Create">
                            <input hidden asp-for="UserId" value="@Model.UserId" />
                            <input hidden asp-for="availableSalary" value="@Model.availableSalary" />
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label asp-for="Salary"></label>
                                    <input asp-for="Salary" class="form-control form-control-user" />
                                    <span asp-validation-for="Salary" class="text-danger"></span>
                                </div>
                                <div class="form-group mr-2">
                                    <label asp-for="Periodicity"></label>
                                    <select asp-for="Periodicity" asp-items="Html.GetEnumSelectList<SalaryPeriodicity>()" class="form-control">
                                        <option selected value="">
                                            Select periodicity
                                        </option>
                                    </select>
                                    <span asp-validation-for="Periodicity" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Currency"></label>
                                    <select asp-for="Currency" asp-items="Html.GetEnumSelectList<SalaryCurrency>()" class="form-control">
                                        <option selected value="">
                                            Select currency
                                        </option>
                                    </select>
                                    <span asp-validation-for="Currency" class="text-danger"></span>
                                </div>
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group row">
                                    <button type="submit" class="btn btn-primary btn-user btn-block"> Add Salary </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
