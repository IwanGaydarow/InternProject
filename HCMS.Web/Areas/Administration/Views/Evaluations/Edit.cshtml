@model HCMS.Web.ViewModels.Administration.Evaluation.EditEvalViewModel
@{
    ViewData["Title"] = "Edit Evaluation";

    var years = new List<SelectListItem>();
    years.Add(new SelectListItem { Text = Model.Year.ToString(), Value = Model.Year.ToString() });
}

<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-3 col-lg-10 mx-auto">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Edit Evaluation</h1>
                        </div>
                        <form method="post" asp-area="Administration" asp-controller="Evaluations" asp-action="Edit">
                            <div class="form-group">
                                <input disabled asp-for="EmployeeName" />
                                <input hidden asp-for="Id" value="@Model.Id" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Year" for="formGroupExampleInput2"></label>
                                <select asp-for="Year" asp-items="years" class="form-control">
                                    <option value="">Select year</option>
                                </select>
                                <span asp-validation-for="Year" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Value"></label>
                                <input asp-for="Value" class="form-control" />
                                <span asp-validation-for="Value" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Notes"></label>
                                <input asp-for="Notes" class="form-control" />
                                <span asp-validation-for="Notes" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-outline-primary">Submit</button>
                            <button type="button" class="btn btn-danger mb-2 back-btn ml-1">Back</button>
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />

    <script>
        $('.back-btn').on("click", function () {
            window.history.back();
        });
    </script>
}

