@using HCMS.Web.ViewModels.Administration.Departments
@model CreateDepartmentViewModel
@{
    ViewData["Title"] = "Create Department";
}

<h1>@ViewData["Title"]</h1>

<form class="form-inline" asp-area="Administration" asp-controller="Departments" asp-action="Create">
    <div class="form-group mb-2">
        <input type="text" readonly class="form-control-plaintext" value="Name of Department">
    </div>
    <div class="form-group mx-sm-3 mb-2">
        <label class="sr-only" asp-for="Tittle"></label>
        <input asp-for="Tittle" class="form-control" id="inputPassword2" placeholder="Name.....">
        <span asp-validation-for="Tittle" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mb-2">Create</button>
    <button type="button" class="btn btn-danger mb-2 back-btn ml-1">Back</button>
    <div class="text-danger" asp-validation-summary="All"></div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $('.back-btn').on("click", function () {
            window.history.back();
        });
    </script>
}