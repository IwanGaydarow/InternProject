@model HCMS.Web.ViewModels.Administration.Departments.ManagerToDepartmentViewModel
@{
    var employees = new List<SelectListItem>();
    ViewData["Title"] = "AddMenager";
    if (Model.Employees.Count() > 0)
    {
        foreach (var employee in Model.Employees)
        {
            var item = new SelectListItem { Text = employee.Name, Value = employee.Id };
            employees.Add(item);
        }
    }
}

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-3 col-lg-10 mx-auto">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Add Menager</h1>
                            </div>
                            <form method="post" asp-area="Administration" asp-controller="Departments" asp-action="AddManager">
                                <input hidden asp-for="DepartmentId" value="@Model.DepartmentId" />
                                    <div class="form-group">
                                        <label asp-for="UserId"></label>
                                        <select asp-for="UserId" asp-items="@employees" class="form-control">
                                        </select>
                                        <span asp-validation-for="UserId" class="text-danger"></span>
                                    </div>
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-group row">
                                        <button type="submit" class="btn btn-primary btn-user btn-block"> Add Manager </button>
                                    </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

