@model HCMS.Web.ViewModels.Administration.Employees.DetailViewModel
@{
    ViewData["Title"] = "Details";

    var emailForm = new EmailFormViewModel { To = Model.Email, ReturnUrl = Model.EmailForm.ReturnUrl };
}

<div class="row">
    <div class="col-md-6 border-right">
        <div class="p-3 py-3">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="text-right">Employee Profile</h4>
            </div>
            <form method="post" class="p-3" asp-area="Administration" asp-controller="Employees" asp-action="Edit" style="background-color:burlywood">
                <input hidden asp-for="Id" value="@Model.Id" />
                <div class="row mt-2">
                    <h6 class="col-md-4">Employee Name:</h6>
                    <div class="col-md-8">
                        <input asp-for="EmployeeName" type="text" class="form-control" value="@Model.EmployeeName" />
                        <span asp-validation-for="EmployeeName"></span>
                    </div>
                </div>
                <div class="row mt-4">
                    <h6 class="col-md-4">Job Tittle:</h6>
                    <div class="col-md-8">
                        <input asp-for="JobTittle" type="text" class="form-control" placeholder="enter address" value="@Model.JobTittle" />
                        <span asp-validation-for="JobTittle"></span>
                    </div>
                </div>
                <div class="row mt-4">
                    <h6 class="col-md-4">Department:</h6>
                    <div class="col-md-8">
                        <input readonly asp-for="Department" class="form-control" value="@Model.Department" />
                    </div>
                </div>
                <div class="row mt-4">
                    <h6 class="col-md-4">Employee Role:</h6>
                    <div class="col-md-8">
                        <input readonly asp-for="Role" class="form-control" value="@Model.Role" />
                    </div>
                </div>
                <div class="row mt-4">
                    <h6 class="col-md-4">Email:</h6>
                    <div class="col-md-8">
                        <input asp-for="Email" type="email" class="form-control" value="@Model.Email" />
                        <span asp-validation-for="Email"></span>
                    </div>
                </div>
                <div class="row mt-3">
                    <h6 class="col-md-4">Phone Number:</h6>
                    <div class="col-md-8">
                        <input asp-for="Phone" type="tel" class="form-control" value="@(string.IsNullOrEmpty(Model.Phone) ? "" : Model.Phone)" />
                        <span asp-validation-for="Phone"></span>
                    </div>
                </div>
                <div class="row mt-3">
                    <h6 class="col-md-4">Gender:</h6>
                    <div class="col-md-8">
                        <input asp-for="Gender" type="text" class="form-control" value="@Model.Gender">
                        <span asp-validation-for="Gender"></span>
                    </div>
                </div>
                <div class="row mt-3">
                    <h6 class="col-md-4">Address:</h6>
                    <div class="col-md-8">
                        <input disabled class="form-control" value="@($"{Model.Town}, {Model.Address}")">
                        <input hidden asp-for="Town" value="@Model.Town" />
                        <input hidden asp-for="Address" value="@Model.Address" />
                    </div>
                </div>
                <div class="mt-5 text-center">
                    <button class="btn btn-primary profile-button" type="submit">Save Profile Changes</button>
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-6">
        <div class="p-3 py-3">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="text-right">Send Email</h4>
            </div>
            <partial name="_EmailFormPartial" model="@emailForm" />
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}