@model HCMS.Web.ViewModels.Administration.Employees.AddRoleDropdownViewModel
@{
    var rols = Model.Rols.Select(x => new SelectListItem(x, x));
}

<form class="form-inline edit-form border border-success p-4" asp-area="Administration" asp-controller="Employees" asp-action="AddRole">
    <div class="form-group">
        <h5>Select new employee role:</h5>
        <select asp-for="Role" asp-items="rols" class="form-control ml-3">
            <option value="">
                Select role
            </option>
        </select>
        <input type="hidden" asp-for="EmployeeId" />
        <button type="submit" class="btn btn-primary ml-3">Submit</button>
        <button type="button" class="btn btn-danger ml-3 mr-3 back-btn">Back</button>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>
</form>

<partial name="_ValidationScriptsPartial" />

<script>
    $('.back-btn').on("click", function () {
        $('.edit-form')[0].remove();
    });
</script>