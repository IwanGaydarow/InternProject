@model HCMS.Web.ViewModels.Vocations.CreateVacationViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-3 col-lg-10 mx-auto">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Create Vacation</h1>
                        </div>
                        <form method="post" asp-area="Manager" asp-controller="Vacations" asp-action="Create">
                            <input hidden asp-for="UserId" value="@Model.UserId" />
                            <div class="form-group">
                                <label asp-for="Tittle"></label>
                                <input asp-for="Tittle" class="form-control" />
                                <span asp-validation-for="Tittle" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FromDate"></label>
                                <input asp-for="FromDate" class="form-control" />
                                <span asp-validation-for="FromDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ToDate"></label>
                                <input asp-for="ToDate" class="form-control" />
                                <span asp-validation-for="ToDate" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-outline-primary">Submit</button>
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}


