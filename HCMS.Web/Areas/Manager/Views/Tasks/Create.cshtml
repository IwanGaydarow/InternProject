@model HCMS.Web.ViewModels.Manager.Tasks.CreateTaskViewModel
@{
    ViewData["Title"] = "Create";
    var projects = Model.Projects.Select(x => new SelectListItem(x.Tittle, x.Id.ToString(), x.Id == Model.ProjectId));
}

<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-3 col-lg-10 mx-auto">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Create Task</h1>
                        </div>
                        <form method="post" asp-area="Manager" asp-controller="Tasks" asp-action="Create">
                            <div class="form-group">
                                <div class="col-sm-6 mb-3 mb-sm-0 mx-auto">
                                    <label asp-for="Tittle"></label>
                                    <input asp-for="Tittle" class="form-control form-control-user" />
                                    <span asp-validation-for="Tittle" class="text-danger"></span>
                                </div>
                                <div class="col-sm-6 mb-3 mb-sm-0 mx-auto">
                                    <label asp-for="Description"></label>
                                    <textarea asp-for="Description" class="form-control form-control-user"> </textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="col-sm-6 mb-3 mb-sm-0 mx-auto">
                                    <label asp-for="EstWorkHours"></label>
                                    <input asp-for="EstWorkHours" class="form-control form-control-user" />
                                    <span asp-validation-for="EstWorkHours" class="text-danger"></span>
                                </div>
                                <div class="col-sm-6 mb-3 mb-sm-0 mx-auto">
                                    <label asp-for="ProjectId"></label>
                                    <select asp-for="ProjectId" asp-items="@projects" class="form-control">
                                        <option selected value="">
                                            Select project
                                        </option>
                                    </select>
                                    <span asp-validation-for="ProjectId" class="text-danger"></span>
                                </div>
                                <div class="col-sm-6 mt-3 mx-auto">
                                    <button type="submit" class="btn btn-outline-primary btn-block mx-auto">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

