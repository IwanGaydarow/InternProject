@model HCMS.Web.ViewModels.EmailFormViewModel
@{
    ViewData["Title"] = "Quick Email";
}
<form method="post" class="w-50 mb-5 border border-dark p-3" asp-area="" asp-controller="Contact" asp-action="SendEmail">
    <input hidden asp-for="ReturnUrl" value="@Model.ReturnUrl" />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="From"></label>
        <input asp-for="From" class="form-control" />
        <span asp-validation-for="From" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="To"></label>
        <input asp-for="To" class="form-control" value="@(Model.To ?? "")" />
    </div>
    <div class="form-group">
        <label asp-for="Subject"></label>
        <input asp-for="Subject" class="form-control" />
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Send email</button>
</form>

<partial name="_ValidationScriptsPartial" />