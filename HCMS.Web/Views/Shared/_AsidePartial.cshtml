@using HCMS.GlobalConstants
@{
    var role = "";
    if (this.User.IsInRole(GlobalConstant.SystemAdministratorRole))
    {
        role = GlobalConstant.SystemAdministratorRole;
    }
    else if (this.User.IsInRole(GlobalConstant.SystemManagerRole))
    {
        role = GlobalConstant.SystemManagerRole;
    }
    else
    {
        role = GlobalConstant.SystemEmployeeRole;
    }
}


<!-- Sidebar -->
    <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion toggled" id="accordionSidebar">

        <!-- Sidebar - Brand -->
        <a class="sidebar-brand d-flex align-items-center justify-content-center" asp-route="">
            <div class="sidebar-brand-icon rotate-n-15">
                <i class="fas fa-laugh-wink"></i>
            </div>
            <div class="sidebar-brand-text mx-3">@GlobalConstant.SystemShortName - @role </div>
        </a>

        <!-- Divider -->
        <hr class="sidebar-divider my-0">

       @if (this.User.IsInRole(GlobalConstant.SystemAdministratorRole))
       {
           <partial name="_AdministratorNavPartial" />
       }
       else if (this.User.IsInRole(GlobalConstant.SystemManagerRole))
       {
           <partial name="_ManagerNavPartial" />
       }
       else
       {
           <partial name="_EmployeeNavPartial" />
       }

        <!-- Divider -->
        <hr class="sidebar-divider d-none d-md-block">

        <!-- Sidebar Toggler (Sidebar) -->
        <div class="text-center d-none d-md-inline">
            <button class="rounded-circle border-0" id="sidebarToggle"></button>
        </div>
    </ul>


